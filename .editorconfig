root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.{py}]
indent_style = tab
indent_size = 4

[*.{md,rst}]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 2
